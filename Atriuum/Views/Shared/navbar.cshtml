<!-- Навигация -->
<style>
    /* Основные стили навигации */
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
        background-color: #2c3e50; /* Темный фон */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        nav a {
            text-decoration: none;
            color: #ecf0f1; /* Светлый текст */
            padding: 10px 15px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            nav a:hover {
                background-color: #34495e; /* Подсветка при наведении */
                color: #e67e22; /* Оранжевый цвет текста при наведении */
            }

    /* Поиск */
    .search {
        position: relative;
        display: flex;
        align-items: center;
    }

        .search input {
            width: 250px;
            padding: 10px;
            border: 1px solid #34495e;
            border-radius: 20px;
            background-color: #ecf0f1;
            color: #2c3e50;
            font-size: 14px;
            transition: box-shadow 0.3s ease, border-color 0.3s ease;
        }

            .search input:focus {
                border-color: #e67e22;
                box-shadow: 0 0 8px rgba(230, 126, 34, 0.5);
                outline: none;
            }

        .search button {
            margin-left: -40px;
            padding: 0;
            border: none;
            background: none;
            cursor: pointer;
            font-size: 16px;
            color: #2c3e50;
            transition: color 0.3s ease;
        }

            .search button:hover {
                color: #e67e22;
            }

    /* Результаты поиска */
    .search-results {
        position: absolute;
        top: calc(100% + 10px);
        left: 0;
        width: 100%;
        background-color: #ecf0f1;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        display: none;
        z-index: 1000;
    }

    .search-results-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
        background-color: #34495e;
        color: #ecf0f1;
        font-weight: bold;
        font-size: 14px;
        border-bottom: 1px solid #ddd;
        border-radius: 8px 8px 0 0;
    }

        .search-results-header .close-button {
            background: none;
            border: none;
            color: #ecf0f1;
            cursor: pointer;
            font-size: 16px;
            transition: color 0.3s ease;
        }

            .search-results-header .close-button:hover {
                color: #e67e22;
            }

    .search-results ul {
        list-style: none;
        margin: 0;
        padding: 0;
        max-height: 200px;
        overflow-y: auto;
    }

        .search-results ul li {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color: #2c3e50;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

            .search-results ul li:last-child {
                border-bottom: none;
            }

            .search-results ul li:hover {
                background-color: #f39c12;
                color: #fff;
            }

            .search-results ul li a {
                color: inherit;
                text-decoration: none;
                display: block;
            }

                .search-results ul li a:hover {
                    color: #fff;
                }

</style>

<nav>
    <a href="@Url.Action("Catalog", "Product", new{TypeName = "12 Storeez"})">12 Storeez</a>
    <a href="@Url.Action("Catalog", "Product", new{TypeName = "Akhmadullina Dreams"})">Akhmadullina Dreams</a>
    <a href="@Url.Action("Catalog", "Product", new{TypeName = "Boggi Milano"})">Boggi Milano</a>
    <a href="@Url.Action("Catalog", "Product", new{TypeName = "COLETTE ADONY"})">COLETTE ADONY</a>
    <div class="search">
        <input type="text" id="searchInput" placeholder="Поиск по сайту..." />
        <button type="button" id="clearButton">✖️</button>
        <div id="searchResults" class="search-results">
            <div class="search-results-header">
                <span>Результаты поиска</span>
                <button class="close-button">✖️</button>
            </div>
            <ul class="resultsList" id="resultsList"></ul>
        </div>
    </div>
</nav>
